{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["es6"],
        "jsx": "react-native",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "types": ["react-native", "jest"]
      },
    "include": [
      "src", "__tests__",
      "**/*.ts",
      "**/*.tsx",
    ],
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }